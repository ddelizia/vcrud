<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mongo="http://www.springframework.org/schema/data/mongo"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/data/mongo
    http://www.springframework.org/schema/data/mongo/spring-mongo-1.0.xsd
    http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <bean name="fongo" class="com.foursquare.fongo.Fongo">
        <constructor-arg value="InMemoryMongo" />
    </bean>
    <bean id="mongoTest" factory-bean="fongo" factory-method="getMongo" />

    <mongo:db-factory id="mongoDbFactoryTest" mongo-ref="mongoTest" />

    <bean id="mongoBasicTemplateTest" class="org.springframework.data.mongodb.core.MongoTemplate">
        <constructor-arg ref="mongoDbFactoryTest"/>
    </bean>

    <context:component-scan base-package="org.ddelizia.vcrud.test.config" />

</beans>