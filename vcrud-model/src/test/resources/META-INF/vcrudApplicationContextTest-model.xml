<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- Creating bean for base tenant -->
    <bean id="mongoFactoryBeanCentral" class="org.springframework.data.mongodb.core.MongoFactoryBean" >
        <property name="host" value="localhost"/>
        <property name="port" value="27017"/>
    </bean>
    <bean id="mongoBasicTemplate" class="org.springframework.data.mongodb.core.MongoTemplate">
        <constructor-arg index="0" type="com.mongodb.Mongo" ref="mongoFactoryBeanCentral"/>
        <constructor-arg index="1" type="java.lang.String" value="dbBase"/>
    </bean>

    <!-- tenant Context Service -->
    <bean id="vcudTenantContext" class="org.ddelizia.vcrud.model.multitenancy.service.mongo.VcrudTenantContextServiceMongo">
        <property name="tenantBeanFactory" ref="vcrudTenantBeanFactory"/>
        <property name="basicMongoTemplate" ref="mongoBasicTemplate"/>
    </bean>

</beans>