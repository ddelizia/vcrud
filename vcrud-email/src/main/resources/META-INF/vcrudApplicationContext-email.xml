<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <!-- Component Scan -->
    <context:component-scan base-package="org.ddelizia.vcrud.email.service"/>
    <!-- example
    <bean id="javeMailSender" class ="org.springframework.mail.javamail.JavaMailSenderImpl" >
        <property name="host" value="smtp.gmail.com" />
        <property name="port" value="587" />
        <property name="username" value="ddelizia@gmail.com" />
        <property name="password" value="Maverick1984" />
        <property name="javaMailProperties">
            <props>
                <prop key="mail.smtp.starttls.enable">true</prop>
            </props>
        </property>
    </bean>
    -->

    <bean id="javaMailSender" class ="org.springframework.mail.javamail.JavaMailSenderImpl" >
        <property name="host" value="${email.host:localhost}" />
        <property name="port" value="1234" />
        <property name="username" value="${email.username:test}" />
        <property name="password" value="${email.password:test}" />
        <property name="javaMailProperties">
            <props>
                <prop key="mail.smtp.starttls.enable">${email.smtp.starttls.enable}</prop>
            </props>
        </property>
    </bean>

    <bean id="smtpMailServerService" class="org.ddelizia.vcrud.email.service.impl.SmtpMailServerServiceImpl" init-method="startSmtpServer" destroy-method="stopSmtpServer">
        <property name="hostname" value="${email.smtpserver.host:localhost}"/>
        <property name="port" value="1234"/>
        <property name="messageHandlerFactory" ref="simpleMessageHandlerFactory"/>
        <property name="authenticationHandlerFactory" ref="easyAuthenticationHandlerFactory"/>
    </bean>

    <bean id="simpleMessageHandlerFactory" class="org.ddelizia.vcrud.email.factory.SimpleMessageHandlerFactory"/>

    <bean id="easyAuthenticationHandlerFactory" class="org.subethamail.smtp.auth.EasyAuthenticationHandlerFactory">
        <constructor-arg ref="simpleUserValidationHandler"/>
    </bean>

    <bean id="simpleUserValidationHandler" class="org.ddelizia.vcrud.email.handler.SimpleUserValidationHandler">
        <property name="username" value="${email.smtpserver.username:test}"/>
        <property name="password" value="${email.smtpserver.password:test}"/>
    </bean>

</beans>