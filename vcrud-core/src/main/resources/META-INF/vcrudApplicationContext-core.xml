<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <!-- Component Scan -->
    <context:component-scan base-package="org.ddelizia.vcrud.core.dao"/>
    <context:component-scan base-package="org.ddelizia.vcrud.core.service"/>
    <context:component-scan base-package="org.ddelizia.vcrud.core.config"/>
    <context:component-scan base-package="org.ddelizia.vcrud.core.factory.modelproperty"/>


    <bean name="org.ddelizia.vcrud.core.filter.FilterTypeMapping" class="org.ddelizia.vcrud.core.filter.FilterTypeMapping"/>

    <bean name="modelPropertyResolver" class="org.ddelizia.vcrud.core.factory.modelproperty.ModelPropertyResolver">
        <property name="mapClass">
            <map>
                <entry key="org.ddelizia.vcrud.model.system.VcrudModel">
                    <bean name="modelPropertyBuilderRef" class="org.ddelizia.vcrud.core.factory.modelproperty.ModelPropertyBuilderRef"/>
                </entry>
                <entry key="java.math.BigDecimal" value-ref="modelPropertyBuilderStringConstructor"/>
                <entry key="java.math.BigInteger" value-ref="modelPropertyBuilderStringConstructor"/>
            </map>
        </property>
        <property name="mapPackage">
            <map>
                <entry key="java.lang" value-ref="modelPropertyBuilderStringConstructor"/>
            </map>
        </property>
    </bean>

    <bean name="modelPropertyBuilderStringConstructor" class="org.ddelizia.vcrud.core.factory.modelproperty.ModelPropertyBuilderStringConstructor"/>

</beans>